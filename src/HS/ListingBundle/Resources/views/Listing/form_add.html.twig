<div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {{ form_errors(form) }}



  <div class="form-group">
    {{ form_label(form.name, "Name", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

    {{ form_errors(form.name) }}

    <div class="col-sm-10">
      {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

  <div class="form-group">
    {{ form_label(form.size, "Size", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.size) }}
    <div class="col-sm-10">
      {{ form_widget(form.size) }}
    </div>
  </div>

  <div class="form-group">
    {{ form_label(form.price, "Price", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.price) }}
    <div class="col-sm-10">
      {{ form_widget(form.price) }}
    </div>
  </div>

  <div class="form-group">
    {{ form_label(form.photo, "Image", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.photo) }}
    <div class="col-sm-10">
      {{ form_widget(form.photo) }}
    </div>
  </div>

  {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}


  {{ form_rest(form) }}

  {{ form_end(form) }}
</div>